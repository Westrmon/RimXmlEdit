<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="450"
		xmlns:local="using:RimXmlEdit"
		Icon="/Assets/rimxmledit_logo.ico"
		Title="RimXmlEdit CrashReport"
		Height="450" Width="350" CanResize="False"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaTitleBarHeightHint="35"
		ExtendClientAreaToDecorationsHint="True"
		WindowStartupLocation="CenterScreen"
		x:Class="RimXmlEdit.CrashReportWindow">
	<Grid Margin="14,30" Grid.RowSpacing="0" RowDefinitions="Auto, Auto, Auto,  *, 30">
		<TextBlock FontSize="50" Grid.Row="0"
				   HorizontalAlignment="Center">
			<Run Text="("/>
			<Run Text="✘" Foreground="red" />
			<Run Text="﹏" Foreground="NavajoWhite"/>
			<Run Text="✘" Foreground="red" />
			<Run Text="ა" Foreground="#00C5CD" />
			<Run Text=")" />
		</TextBlock>
		<TextBlock Text="Error, Unpredictable errors occur in the software"
				   TextWrapping="WrapWithOverflow" Grid.Row="1" Margin="0,15,0,0"
				   HorizontalAlignment="Center"/>
		<Separator Grid.Row="2" />
		<TextBox   x:Name="ErrorMessageBox" Grid.Row="3" HorizontalAlignment="Stretch" Margin="0,0,0,10"
				   TextWrapping="Wrap" IsReadOnly="True"/>
		<Grid Margin="0" Grid.Row="4" Grid.ColumnDefinitions="1* 1*"
			  HorizontalAlignment="Center">
			<Button Grid.Column="0" Content="OK" Width="100" Margin="0,0,10,0" Click="Button_Click"/>
			<Button Grid.Column="1" Content="Help" Width="100" Margin="0,0,10,0" Click="Button_Click_1"/>
		</Grid>
	</Grid>
</Window>
